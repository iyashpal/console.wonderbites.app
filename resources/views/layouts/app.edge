<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">

  <head>
    <meta charset=" UTF-8">
    <meta name="csrf" content="{{ csrfToken }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title || 'Home' }} - Wonderbites</title>

    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">

    @entryPointStyles('app')

  </head>

  <body class="h-full">

    <div id="app">
      <v-admin-layout :user="{{ JSON.stringify(auth.user) }}">

        <template #title>{{ title || 'Page Title' }}</template>

        <template #actions>
          @!section('actions')
        </template>

        <template #content>
          @!section('content')
        </template>

      </v-admin-layout>
    </div>


    <form id="logout-form" action="{{ route('logout') }}" method="post">{{ csrfField() }}</form>

    @entryPointScripts('app')
  </body>

</html>
