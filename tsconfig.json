{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "lib": [
      "ES5",
      "ES6",
      "DOM"
    ],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],

      // SPA Aliases
      "@/*": [
        "./resources/react/*"
      ],
      "~/*": [
        "./resources/react/*"
      ]
    },
    "types": [
      "@types/react",
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/view",
      "@adonisjs/auth",
      "@adonisjs/mail",
      "@adonisjs/lucid",
      "@adonisjs/redis",
      "@adonisjs/shield",
      "@types/react-dom",
      "@adonisjs/session",
      "@adonisjs/bouncer",
      "@adonisjs/limiter",
      "@adonisjs/drive-gcs",
      "@adonisjs/lucid-slugify",
      "@adonisjs/attachment-lite",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/route-model-binding/build/adonis-typings"
    ]
  }
}
